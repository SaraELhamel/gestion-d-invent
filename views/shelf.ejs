<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>shelf</title>
</head>
<style>
 body{
    background-color: pink;
  }
  table, th, td {
  border:  solid brown;
  padding: 15px;
}
table {
  width: 90%;
  margin: auto;
}
th {
  text-align: center;
}
h1{
  color: brown;
  text-align: center;
}
</style>
<body>
  <h1>Shelf Table</h1>
  <% rayon.forEach(function(row){ %>
    <table>
      <tr>
        <th>ID</th>
        <th>produit</th>
        <th>catégorie</th>
      </tr>
      <tr>
        <th><%= row.id %></th>
        <th><%= row.produit %></th>
        <th><%= row.catégorie %></th> 
      </tr>
    </table>
  <% }); %>
</body>
</html>
